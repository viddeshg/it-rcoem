<!DOCTYPE html>
<html>
<head>
  <title>Attendance Upload</title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>
</head>
<body>
<%= render 'layouts/navbar' %>
<main>
  <div class="container">

    <div class="row">
      <div class="col m10 offset-m1 s12">
        <br><br>
        <div id="reader" style="width:100%;height:40vh;"></div>
        <br>
        <div class="center">
          <span id="read" class="center" style="background-color: #673BB7; color: #fff; border-radius: 3px; padding: 1rem 2rem 1rem 1rem; position: relative;"> Looking for QR Code....</span>
        </div>
      </div>
    </div>
  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
<script src="/js/html5-qrcode.min.js"></script>
<script src="/js/jsqrcode-combined.min.js"></script>
<script>
    $(document).ready(function(){
        $('#reader').html5_qrcode(function(data){
                $('#read').html(data);
            },
            function(error){
                $('#read_error').html(error);
            }, function(videoError){
                $('#vid_error').html(videoError);
            }
        );
    });
</script>
</body>
</html>
