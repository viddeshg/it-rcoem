<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>

  <style>
    .btn-large:hover
    {
      background-color: #fff;
      color: #673BB7;
      /*border: 1px solid #673BB7;*/
    }

    .btn-large
    {
      background-color: #673BB7;
      color: #fff;
    }
  </style>

</head>
<body>
<%= render 'layouts/navbar' %>
<main>
  <div class="container">
    <p class="center flow-text" style="letter-spacing: 1px; color: #673BB7;"><strong>ADMIN PANEL</strong></p>

    <div class="row">
      <div class="col s12 m10 offset-m1" style="padding:0;">
        <div class="col m2 s6">
          <a class="center waves-effect waves-light custom-active" href="/admin"><i class="fas fa-home"></i> HOME</a>
        </div>
        <div class="col m2 s6">
          <a class="center waves-effect waves-light custom-btn" href="/admin/events" style="margin-bottom: 5px;"><i class="fas fa-star"></i> EVENTS</a>
        </div>
        <div class="col m2 s6">
          <a class="waves-effect center waves-light custom-btn" href="/admin/notices"><i class="fas fa-bell"></i> NOTICES</a>
        </div>
      </div>
    </div>
    </div>

  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
<script>
    $(document).ready(function() {
        $('input#event_name').characterCounter();
    });
</script>
</body>
</html>
