<!DOCTYPE html>
<html>
<head>
  <title>Admin | Events</title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>


</head>
<body style="overflow-x:hidden">
<%= render 'layouts/navbar' %>
<main>
  <div class="container">
    <br><br>
    <div class="row">
      <div class="col s12 m10 offset-m1">
        <%= render 'events/formNew' %>
      </div>
      <div class="col s12 m10 offset-m1">
        <table class="s12 m12 striped">
          <thead style="color:#673BB7;">
          <tr>
            <th>S.No.</th>
            <th>Date</th>
            <th>Event Title</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @events.each do |event| %>
              <tr>
                <td><%= @flag = @flag + 1 %></td>
                <td><%= event.date %></td>
                <td><a style="color:#333;" href="/events/<%= event.id %>"><%= event.title %></a></td>
                <td> <a style="color:#209CEE;" href="/admin/events/<%= event.id %>/edit_event"><i class="far fa-edit"></i> Edit</a> | <a onclick="return confirm('Are you sure?')" href="/admin/events/<%= event.id %>/destroy_event" style="color:#FF3860;"><i class="far fa-trash-alt"></i> Delete</a></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
<script>
    $(document).ready(function() {
        $('input#event_name').characterCounter();
    });
</script>
</body>
</html>
