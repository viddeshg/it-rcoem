<!DOCTYPE html>
<html>
<head>
  <title><%= @event.title %></title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>
</head>
<body>
<%= render 'layouts/navbar' %>
<main>
  <div class="container">


    <div class="row">
      <div class="col s12 m9">
        <div class="card ">
          <div class="card-content">
            <div>
              <p style="font-size: 1.5rem; color: #673BB7;"><strong><%= @event.date %></strong>: <a style="color: #333;" href="events/<%= @event.id %>"><%= @event.title %></a></p>
            </div>
            <hr>
            <div>
              <%= @event.description %>
            </div>
          </div>
        </div>
      </div>

      <!--Card Begin-->
      <div class="col s12 m3" style="height: 400px; margin-top: -5px;">
        <div class="card" style="height: 100%; border-radius: 15px;">
          <div class="card-content">
            <p class="center flow-text" style="color: #673BB7;"> Latest @ IT</p>
            <hr>


            <% @events.last(3).each do |events| %>

                <!--Date-->
                <strong style="font-size: 80%; color:#673BB7;"><%= events.date %></strong>:
                <!--Event Name-->
                <a href="/events/<%= events.id %>" style="text-decoration: none; font-size: 80%; color: #333;"><%= events.title %></a>
                <hr>
            <% end %>

            <!--View All-->
            <p class="center" style="margin-top: 5px;">
              <a href="/events" style="color: #673BB7;">View All</a>
            </p>
          </div>
        </div>
      </div>
      <!--Card End-->
    </div>


  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
</body>
</html>
