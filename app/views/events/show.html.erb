<!DOCTYPE html>
<html>
<head>
  <title><%= @event.title %></title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>
</head>
<body>
<%= render 'layouts/navbar' %>
<main>
  <div class="container">


    <div class="row">
      <div class="col s12 m9">
        <div class="card ">
          <div class="card-content">
            <div>
              <p style="font-size: 1.5rem; color: #673BB7;"><strong><%= @event.date %></strong>: <a style="color: #333;" href="events/<%= @event.id %>"><%= @event.title %></a></p>
            </div>

            <hr>

            <div>
              <%= @event.description %>
            </div>


          </div>
        </div>
      </div>
    </div>


  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
</body>
</html>
