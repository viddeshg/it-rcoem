<!DOCTYPE html>
<html>
<head>
  <title>Events | IT Dept</title>
  <%= render 'layouts/links' %>
  <%= render 'layouts/styles' %>
</head>
<body>
<%= render 'layouts/navbar' %>
<main>
  <div class="container">
    <p class="flow-text center" style="color: #673BB7; letter-spacing: 1px;">EVENTS</p>
    <div class="row">
          <% @events.each do |event| %>
          <div class="col offset-m1 m10 s12">
            <p onclick="location.href='/events/<%= event.id %>'" style="cursor: pointer;"><strong><%= event.date %></strong>: <a href="events/<%= event.id %>"><%= event.title %></a></p>
            <hr>
          </div>
          <% end %>
    </div>
  </div>
</main>
<%= render 'layouts/footer' %>
<%= render 'layouts/scripts' %>
</body>
</html>
