<%= form_for @event do |e| %>
    <div class="row">
      <div class="col s12 m12 center">
        <% flash.each do |name, msg| %>
            <p style="background-color: #23d160; color: #fff; border-radius: 3px; padding: 1rem 2rem 1rem 1rem; position: relative;"><%= msg %></p>
        <% end %>
      </div>
      <div class="input-field col s12">
        <%= e.text_field :title, placeholder: 'Title of the event', id: 'event_name', class: 'validate' %>
        <label for="event_name">Event Name</label>
      </div>
      <div class="input-field col s12">
        <%= e.text_area :description, placeholder: 'Description of the event', id: 'event_desc', class: 'materialize-textarea' %>
        <label for="event_desc">Event Description</label>
      </div>
      <div class="input-field col s12">
        <%= e.text_field :date, class: 'datepicker', id: 'calender', placeholder: 'dd-mmm-yyyy' %>
        <label for="calender">Date</label>
      </div>
      <div class="center">
        <%= e.submit 'Submit', class: 'btn waves-effect waves-light', name: 'action', value: 'Submit' %>
      </div>
    </div>
<% end %>